<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Android" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary_color_blue</item>
    </style>

    <style name="Theme.Android.Fullscreen" parent="Theme.Android">
        <item name="android:actionBarStyle">@style/Widget.Theme.Android.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Android.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

<!--  Test  -->
    <style name="Theme.Demo" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>